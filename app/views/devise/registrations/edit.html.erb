<% provide(:title, '登録情報の編集') %>

<div class="container-login">
  <div class="form-parts">
    <h3 class="devise-form devise-registration">登録情報の編集</h3>

    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= bootstrap_devise_error_messages! %>
      <div class="form-group row">
        <%= f.label :name, class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7">
          <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :username, class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7">
          <%= f.text_field :username, autocomplete: 'username', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7">
          <%= f.email_field :email, autocomplete: 'email', class: 'form-control', required: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7">
          <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
          <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7">
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
        </div>
      </div>

      <% if @user.provider.blank? %>
        <div class="form-group row">
          <%= f.label :current_password, class: 'col-form-label col-sm-5' %>
          <div class="col-sm-7">
            <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

            <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
          </div>
        </div>
      <% else %>
      <% end %>

      <div class="form-group row">
        <%= f.label :website, class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7">
          <%= f.text_field :website, autocomplete: 'website', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :tel, class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7">
          <%= f.text_field :tel, autocomplete: 'tel', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :introduce, class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7">
          <%= f.text_area :introduce, autocomplete: 'introduce', class: 'form-control', rows: '5' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label '性別', class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7 gender-box">
          <label><%= f.radio_button :gender, "male" %>男性</label>
          <label><%= f.radio_button :gender, "female" %>女性</label>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :image, class: 'col-form-label col-sm-5' %>
        <div class="col-sm-7">
          <%= f.file_field :image, accept: "image/jpeg, image/png" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit t('.update'), class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <hr class="devise-link my-5">
    <div class="form-group">
      <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete, class: 'btn btn-danger btn-block' %>
    </div>
  </div>
</div>
