<% provide(:title, 'アクティビティ') %>

<h3 class="text-center">通知一覧</h3>
    <%= link_to notifications_path, method: :delete do %>
        <i class="fas fa-trash" style="color: black;"></i>
        <h7 style="color: black;">通知を全て削除</h7>
    <% end %>
    <hr>
<% if @notifications.exists? %>
    <div>
      <%= render @notifications %>
      <%= will_paginate @notifications %>
    </div>
<% else %>
    <p>通知はありません</p>
<% end %>
